body
  margin 0
  padding 0
  background #efefef
header
  height 35px
  background #ffffff
  line-height 35px
  .icon-back
    position absolute
    top 2px
    left 5px
    display inline-block
    width 30px
    height 30px
    background url("../../img/login/nav_back_icon@2x.png") no-repeat center
    background-size 12px 18px
  .header_title
    display inline-block
    width 100%
    text-align center
    color #ed692b
.form-list
  width 100%
  height 200px
  margin-top 5%
  background #fff
  .form-cell
    display flex
    height 40px
    line-height 40px
    border-bottom 1px solid #efefef
    .form-cell-name
      display inline-block
      width 50px
      padding-left 40px
      background url("../../img/login/content_ID_icon@2x.png") no-repeat 10px center
      background-size 25%
      &.form-cell-mark
        width 20%
        background url("../../img/login/content_verify_icon@2x.png") no-repeat 10px center
        background-size 12%
      &.form-cell-password
        background url("../../img/login/content_password_icon@2x.png") no-repeat 10px center
        background-size 20%
      &.form-cell-sf
        background url("../../img/login/content_position_icon@2x.png") no-repeat 10px center
        background-size 25%
     .btn_mark
       background #ed692b
       border none
       border-radius 5px
       color #ffffff
       font-size 12px
       height 30px
       margin 5px 0
       margin-right 2px

    .form-cell-input
      flex 1
      border none
      outline none
    #sf
      color #999
      width 55%
      height 36px
      border none
      outline none
      option
        color #ffffff
        background-color #a3a3a3


.btn_box
  padding-left 3%
  .register
    padding 3% 0
    border none
    border-radius 5px
    width 96%
    color #ffffff
    background #c7c7c7
    margin-top 10%
    margin-bottom 5%
    &.active
      background #EA5404
  .btn-text
    display inline-block
    width 100%
    color #707071
    font-size 14px
    text-align center
    a
      color #ed692b
